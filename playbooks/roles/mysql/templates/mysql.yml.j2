version: "3.7"

services:
  mysql:
    image: mysql:8
    restart: always
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager
          - node.labels.mysql.mysql-data == true
    volumes:
      - {{ mysql_dir }}/script/sql/:/docker-entrypoint-initdb.d/
      - mysql-data:/var/lib/mysql
    networks:
      - traefik-public
    command:
      - "--default-authentication-plugin=mysql_native_password"
      - "--lower_case_table_names=1"
    environment:
      - MYSQL_ROOT_PASSWORD={{ mysql_root_password }}
    healthcheck:
      test: ["CMD", "mysqladmin" ,"ping", "-h", "localhost"]
      timeout: 20s
      retries: 10

networks:
  traefik-public:
    external: true

volumes:
  mysql-data:
